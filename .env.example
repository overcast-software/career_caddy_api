# Base Django settings
SECRET_KEY=replace-with-a-secure-random-value
DEBUG=False
ALLOWED_HOSTS=api.careercaddy.online,careercaddy.online

# Database (used by both Django and SQLAlchemy)
DB_NAME=job_hunting
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/job_hunting
# Alternative SQLite for single-host deployment:
# DATABASE_URL=sqlite:////data/db.sqlite3

# Security
CSRF_TRUSTED_ORIGINS=https://api.careercaddy.online,https://careercaddy.online
CORS_ALLOWED_ORIGINS=https://api.careercaddy.online,https://careercaddy.online

# DRF throttling (optional)
DRF_ANON_THROTTLE_RATE=100/day
DRF_USER_THROTTLE_RATE=1000/day

# JWT (optional lifetimes)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Feature flags
ALLOW_BOOTSTRAP_SUPERUSER=False
BOOTSTRAP_TOKEN=
SCRAPING_ENABLED=False

# Deployment
WEB_IMAGE=ghcr.io/overcast-software/career_caddy_api:latest
